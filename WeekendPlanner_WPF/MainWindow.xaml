<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeekendPlanner_WPF"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="WeekendPlanner_WPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="WhiteSmoke" Loaded="onLoad">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10" Background="#FFB7C5 ">
            <Label Content="WeekendPlanner" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Verdana" FontWeight="Bold"/>
        </StackPanel>
        <WrapPanel x:Name="wrapPanel" Grid.Row="1"/>
        <Label Content="For more Features visit our Website!" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center"/>





    </Grid>
</Window>
